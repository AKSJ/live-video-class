extends ./layouts/nonavbar.jade

append head
	link(rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Lobster")

block content
	.container
		.row
			.col-md-6.col-md-offset-3(style='text-align:center;')
				img(src='/images/Mummy_Workout_Logo_3.jpg')
		.row
			.col-md-6.col-md-offset-3(style='text-align:center;')
				h1.contact Please login with your Google account
				br
				p You must login with the google account whose email address matches your mummyworkouts.com account.
				p If you login with the wrong google account, your attempt to join the class will fail.
				br
				p Please ensure that your browser is not already signed into a different google account.
				p You can check if you are already signed in to google by visiting the <a href='https://accounts.google.com/' target='_blank'>google accounts</a> page.
				br
				if (s2mEmail)
					h4 You must login with #{s2mEmail}
		.row
			.col-md-6.col-md-offset-3(style='text-align:center;')
				a.btn.btn-success#login(href='/login/google', role='button') Login with Google
